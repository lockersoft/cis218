<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:baselineAligned="false" android:orientation="vertical">

    <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner" android:layout_gravity="center_horizontal" android:layout_weight="1"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:entries="@array/buildings" android:clickable="true"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView" android:layout_weight="1" android:layout_alignParentLeft="true"
            android:layout_below="@+id/spinner"/>
</RelativeLayout>